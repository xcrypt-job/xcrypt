use base qw(GA core);
use Data_Extraction;
use Data_Generation;

%template = (
    'id' => 'job3',
    'arg0_1' => '5',                 # length of string
    'arg0_2' => 'onePointCrossover', # how to crossover
    'arg0_3' => 'equivalence',       # probability of choice
    'JS_queue' => 'gh10034',
    'JS_group' => 'gh10034'
);

@jobs = &prepare(%template,
		 'arg0_0' => '100', # number of generation
		 'arg0_4@' => ['12345 54321 abcde edcba',
			     '00000 11111 22222 33333 44444']);
&submit_sync(@jobs);

foreach (@jobs) {
    # use Data_Extraction
    my $datum = EF("file:$ENV{'XCRYPT'}/sample/$_->{id}/$_->{stdofile}");
    $datum->ED('L/1');
    $datum->ED('C/1');
    my @param = $datum->ER();

    # use Data_Generation
    my $gen = CF("$ENV{'XCRYPT'}/sample/dat/template.dat",
		 "$ENV{'XCRYPT'}/sample/$_->{id}/");
    $gen->KR('param', "$param[0]");
    $gen->do();
}
