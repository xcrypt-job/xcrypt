# Sumit multiple jobs sequentially (sandbox)
use base qw (sandbox limit core);
limit::initialize(1);

%template = (
    'id' => 'job', 
    'RANGE0' => [40..45],      
    'exe@' => sub {"./fib $_[0] > out$_[0]"},
    'copiedfile0' => './bin/fib',
    'JS_queue' => 'gh10034',
    'JS_group' => 'gh10034',
    'before' => sub {
        print "Submitting $self->{id}\n";
    },
    'after' => sub {
        print "$self->{id} finished\n";
    } 
    );
prepare_submit_sync (%template);
