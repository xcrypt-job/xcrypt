use base qw(bulk core);

%template = (
    'id' => 'job6',                # easy job-id for user to understand
    'exe' => './fib',
    'arg0' => '50',
    'arg1' => '> out',             # i.e., $ ./fib 50 > out
    'linkedfile0' => 'common/fib', # where exe-file exists
    'queue' => 'gh10034',          #
    'cpu' => '1',
    'group' => 'gh10034'
);

@jobs = &prepare(%template, 'arg0@' => [20..22]);
my @bulkedjobs = &bulk::bulk('bulk4', @jobs);
&submit(@bulkedjobs);
&sync(@bulkedjobs);

