# xcryptをジョブ内で投げるジョブスクリプト
use base qw(limit core);
use File::Spec;

my $XCRFILE=File::Spec->rel2abs("rangesearch.xcr");

&prepare_submit_sync (
    'id' => 'job-xcrypt',
    'exe' => "PATH=$ENV{PATH} XCRYPT=$ENV{XCRYPT} XCRJOBSCHED=$ENV{XCRJOBSCHED} xcrypt",
    'arg0' => $XCRFILE,
    'arg1' => '--limit 50',
    # .xcr以外の必要ファイル
    'copiedfile0' => 'common/fib',
    'queue' => 'gh10034',
    'group' => 'gh10034',
    'memory' => '31gb',
);
