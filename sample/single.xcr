# Sumit just a single job.
use base qw (core);

%template = (
             'id' => 'example', 
             'exe' => './a.out',
             'arg0' => "input",
             'arg1' => "output",
             'copiedfile0' => 'a.out',
             'copiedfile1@' => '"input$R0"',
             'queue' => 'ghxxxxx',  # modify for your system
             'group' => 'ghxxxxx',  # modify for your system
             );
@job = prepare (%template);
submit(@job);
sync(@job);
