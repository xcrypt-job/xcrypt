#!/usr/bin/env perl

use strict;
use File::Spec;
use Getopt::Long qw(:config pass_through);

our %options = ();

GetOptions
    (\%options,
     'all',
    );

my $xcrfile;
if (defined $options{'all'}) {
    $xcrfile = 'invalidateall.xcr';
} else {
    $xcrfile = 'invalidate.xcr';
}
system('xcrypt ' . File::Spec->catfile($ENV{XCRYPT}, 'bin', 'script', $xcrfile) . ' ' . join (' ', @ARGV));
