use base qw(core);
use File::Spec;
use interactive;
use jobsched;
use xcropt;

my $Inventory_Path = $xcropt::options{inventory_path};
foreach my $id (@ARGV) {
     system('touch ' . File::Spec->catfile($Inventory_Path, $id . '_to_be_aborted'));
    &interactive::qdel($id);
    print "$id is aborted by user.\n";
}
