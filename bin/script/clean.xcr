use base qw(core);
use File::Spec;
use interactive;

my $Inventory_Path = $xcropt::options{inventory_path};
foreach my $id (keys(%jobsched::Last_State)) {
    &interactive::qdel($id);
}

my $count = 0;
while (-e "$Inventory_Path.$count") {
    $count++;
}
rename $Inventory_Path, "$Inventory_Path.$count";
