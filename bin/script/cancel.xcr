use base qw(core);
use File::Spec;
use interactive;
use jobsched;
use xcropt;

my $Inventory_Path = $xcropt::options{inventory_path};
unlink File::Spec->catfile($Inventory_Path, $ARGV[0] . '_to_be_invalidated');
system('touch ' . File::Spec->catfile($Inventory_Path, $ARGV[0] . '_to_be_cancelled'));
&interactive::qdel($ARGV[0]);
print "$ARGV[0] is cancelled by user.\n";
